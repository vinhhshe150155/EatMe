<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14462D"
    tools:context=".activity.SearchResultActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.cardview.widget.CardView
            android:background="@drawable/background_border1"
            android:id="@+id/cardView"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            android:layout_width="340dp"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:queryHint="Search your food..."
                android:background="#14462D"
                app:iconifiedByDefault="false"
                app:searchIcon="@drawable/ic_search" />
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/btnFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:srcCompat="@drawable/ic_filer" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>