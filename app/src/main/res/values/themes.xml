<resources>
    <!-- Base application theme. -->
    <style name="Theme.EatMe2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#60FBF8F8</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#14462D</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EatMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#14462D</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Home" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/floral_white</item>
        <item name="colorPrimaryVariant">@color/floral_white</item>
        <item name="colorOnPrimary">@color/floral_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/floral_white</item>
        <item name="colorSecondaryVariant">@color/floral_white</item>
        <item name="colorOnSecondary">@color/floral_white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:fontFamily">@font/heebo_light</item>
    </style>

    <style name="Theme.EatMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EatMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EatMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>